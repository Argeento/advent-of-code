{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2020",
      "target": "ES2022"
    }
  },
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
